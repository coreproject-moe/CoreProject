        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-svelte": "^2.46.1",
        "globals": "^15.14.0",
        "prettier": "^3.4.2",
        "prettier-plugin-svelte": "^3.3.2",
        "svelte": "^5.17.3",
        "svelte-check": "^4.1.3",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
